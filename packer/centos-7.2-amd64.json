{
  "variables": {
    "name": "centos-7.2-amd64",
    "description": "CentOS 7.2 x86_64 (amd64)",
    "version": "0.1.0",
    "releases_mirror": "mirrors.kernel.org",
    "build_number": "{{env `BUILD_NUMBER`}}",
    "headless": "true"
  },
  "description": "{{user `description`}}",
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "vagrant-virtualbox",
      "headless": "{{user `headless`}}",
      "vm_name": "packer_{{user `name`}}",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "linux<wait>",
        " auto<wait>",
        " text<wait>",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.2/ks.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "http://{{user `releases_mirror`}}/centos/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso"
      ],
      "output_directory": "artifacts/vagrant-virtualbox/{{user `name`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "virtualbox_version_file": ".virtualbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "1"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--nictype1",
          "virtio"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--rtcuseutc",
          "on"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--natdnshostresolver1",
          "on"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "only": [
        "vagrant-virtualbox"
      ],
      "source": "files/vagrant",
      "destination": "/var/tmp"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ARCHIVE_MIRROR=http://{{user `archive_mirror`}}/ubuntu",
        "BUILD_NUMBER={{user `build_number`}}",
        "PACKER_BUILD_NAME={{user `name`}}",
        "PACKER_BUILD_TIMESTAMP={{timestamp}}",
        "PACKER_BUILD_VERSION={{user `version`}}",
        "CHEF_CLIENT_VERSION={{user `chef_client_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -H -S -E bash '{{ .Path }}'",
      "scripts": [
        "scripts/common/reboot.sh",
        "scripts/vagrant/vagrant.sh",
        "scripts/centos/clean-up.sh",
        "scripts/vagrant/minimize.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "vagrantfile_template": "templates/Vagrantfile.template",
      "output": "../images/vagrant-{{ .Provider }}/{{user `name`}}.box",
      "keep_input_artifact": false,
      "compression_level": 9
    }
  ]
}
